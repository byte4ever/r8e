{
  "policies": {
    "payment-api": {
      "timeout": "2s",
      "circuit_breaker": {
        "failure_threshold": 5,
        "recovery_timeout": "30s"
      },
      "retry": {
        "max_attempts": 3,
        "backoff": "exponential",
        "base_delay": "100ms",
        "max_delay": "5s"
      },
      "rate_limit": 100,
      "bulkhead": 10
    },
    "notification-api": {
      "timeout": "5s",
      "retry": {
        "max_attempts": 5,
        "backoff": "constant",
        "base_delay": "1s"
      }
    }
  }
}
